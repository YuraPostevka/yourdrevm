@model Models.User
@{

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ConfiguringUser</title>

    <link rel="stylesheet" href="~/Content/croppie.css" />

</head>
<body>
    @using (Html.BeginForm("ConfiguringUser", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", @id = "form" }))
    {

        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>User</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @Html.HiddenFor(model => model.Id)


            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label for="Profile" class="control-label col-md-2">FileName:</label>

                <div class="col-md-10">
                    <a class="btn btn-default">
                        <span>Upload</span>
                        <input id="ProfilePicture" type="file" onchange="readFile(this);" max-size="12" accept="image/*" value="Choose a file" name="image"/>
                    </a>
                   
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="hidden" name="points" id="points" />
                    <input type="hidden" name="zoom" id="zoom" />
                    <input type="hidden" value="" name="Profile" id="profile" />

                    <div id="crop_image" style="width: 300px;">
                    </div>

                </div>

            </div>

            <div class="form-group">
                <div class="col-md-10 pull-right">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>

        <script src="~/Scripts/jquery-3.1.1.js"></script>
        <script src="~/Scripts/croppie.js"></script>
        <script src="~/Scripts/HomePage/Cropper.js"></script>
    }

    <div>
        @Html.ActionLink("Back to Index", "Index")
    </div>
</body>
</html>
